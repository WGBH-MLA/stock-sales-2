<% content_for(:page_title) do %>
  <%= "#{@about.title} | #{t('blacklight.application_name')}" %>
<% end %>

<h1>
  <%= @about.title %>
</h1>

<div class="container">
  <div class="row">  
    <div class="col-md-7 body">
      <%= @about.main_html.gsub('<div class="toc"></div>', @about.toc_html).html_safe %>
    </div>
    <div class="col-md-4 pull-right">
      <p>
        <%= render partial: 'collections/collection_select' %>
      </p>
      <div id="helpful-links">
        <h3>Helpful Links</h3>
        <%= @about.links_html.html_safe %>
      </div>
    </div>
  </div>
</div>

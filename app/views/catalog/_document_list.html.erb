<% # container for all documents in index list view -%>
<div id="documents" class="documents-<%= document_index_view_type %>">
  <% documents.in_groups_of(4, false) do |document_group| %>
    <div class="row">
      <% document_group.each do |document| %>
        <div class="col-md-3">
          <%= render document %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
